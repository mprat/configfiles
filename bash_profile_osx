export GIT_PS1_DESCRIBE_STYLE="branch"
#PS1="[\w] \u\$ "
PS1="[\[\033[32m\]\w]\[\033[0m\]\$(__git_ps1)\n\[\033[1;36m\]\u\[\033[32m\]$ \[\
\033[0m\]"

